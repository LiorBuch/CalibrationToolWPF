<Window x:Class="CalibrationToolWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalibrationToolWPF.views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Home Tab" x:Name="homeTab" Width="100">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="81*"/>
                        <ColumnDefinition Width="713*"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabItem>
            <TabItem Header="Test" x:Name="testTab" Width="100">
                <Grid Background="#FFE5E5E5">
                    <local:TestPage/>
                </Grid>
            </TabItem>
            <TabItem Header="Reports" x:Name="ReportTab" Width="100">
                <Grid Background="#FFE5E5E5">
                </Grid>
            </TabItem>
            <TabItem Header="Settings" x:Name="settingsTab" Width="100">
                <Grid Background="#FFE5E5E5">
                    <local:SettingsPage/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
